<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackgroundt"
    android:orientation="vertical"
    tools:context=".GameDetailActivity">

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientlineardetail"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/steamicon" />

        <TextView
            android:id="@+id/GameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PORTAL KNIGHTS"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <com.example.philipp.tetheract.layouts.BaseCard
                    android:id="@+id/ImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/bigImage"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_gravity="top"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/portalknightsdetail" />
                </com.example.philipp.tetheract.layouts.BaseCard>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:id="@+id/GameDetailStartGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="top|left"
                    android:background="@drawable/glow"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="6dp"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/detailGrey"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView12"
                                    android:layout_width="19dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:padding="3dp"
                                    android:tint="@color/detailFontGreen"
                                    app:srcCompat="@drawable/icon_cart" />

                                <TextView
                                    android:id="@+id/BuyGameTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:text="Buy PORTAL KNIGHTS"
                                    android:textColor="@color/detailFontGreen"
                                    android:typeface="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|start"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/DetailPagePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|end"
                                    android:paddingTop="5dp"
                                    android:text="5.49 $"
                                    android:textColor="@color/detailTextBodyFontColor" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"

                    android:layout_marginTop="6dp"
                    android:background="@drawable/glow"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="6dp"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/detailGrey"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ABOUT THIS GAME"
                                    android:textColor="@color/fontLight"
                                    android:typeface="normal" />

                                <TextView
                                    android:id="@+id/releaseDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right|end"
                                    android:text="Release Date: Jun 2015"
                                    android:textColor="@color/detailNumbersGrey"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|start"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/descriptiontext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Prove yourself a Portal Knight by levelling up your character, crafting epic weapons, and vanquishing foes in real-time in this cooperative, 3D sandbox action RPG.  \n\nExplore dozens of randomly-generated islands! Build almost anything! In a world torn apart by the Fracture and terrorized by the Hollow King, you and your friends are its only hope! \n \nCraft your adventure. Forge your hero. Become the ultimate Portal Knight!"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"

                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gradientlineardetail"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:text="USER REVIEWS"
                                    android:textColor="@color/fontLight"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/ReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:paddingStart="0dp"
                                    android:text="(1,488)"
                                    android:textColor="@color/detailNumbersGrey"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:text="Very Positive"
                                    android:textColor="@color/fontLight"
                                    android:textSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"

                    android:layout_marginTop="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gradientlineardetail"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:text="USER TAGS"
                                    android:textColor="@color/fontLight"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/UserTags"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginStart="4dp"
                                    android:text="Sandbox  Action  RPG"
                                    android:textColor="@color/detailTextBodyFontColor"
                                    android:textSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"

                    android:layout_marginTop="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gradientlineardetail"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="left|center_vertical|start"
                                    android:layout_margin="3dp"
                                    app:srcCompat="@drawable/icon_community" />

                                <ImageView
                                    android:id="@+id/imageView11"
                                    android:layout_width="18dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="left|center_vertical|start"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/icon_community" />

                                <ImageView
                                    android:id="@+id/imageView10"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="left|center_vertical|start"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/icon_steam_achievements" />

                                <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="left|center_vertical|start"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/icon_cards" />

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="left|center_vertical|start"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/icon_cart" />
                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"

                    android:layout_marginTop="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="6dp"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gradientlineardetail"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:text="LANGUAGES"
                                    android:textColor="@color/fontLight"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/ReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:paddingStart="0dp"
                                    android:text="(6)"
                                    android:textColor="@color/detailNumbersGrey"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:text="English (Full Audio)"
                                    android:textColor="@color/detailTextBodyFontColor"
                                    android:textSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

                <com.example.philipp.tetheract.layouts.GameDeatailCardView
                    android:id="@+id/wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="top|left"
                    android:layout_marginTop="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:aString="Open Shop"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gradientlineardetail"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left|fill_horizontal"
                                    android:layout_weight="1"
                                    android:text="Add to your Wishlist"
                                    android:textColor="@color/fontLight"
                                    android:textColorLink="@color/detailFontGreen"
                                    android:textSize="9sp"
                                    tools:text="Add to your Wishlist" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>


                </com.example.philipp.tetheract.layouts.GameDeatailCardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>