<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Navigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background"
        android:gravity="left"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/Shop"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:backgroundTint="@drawable/controller_selector_color"
            android:focusable="false"
            android:src="@drawable/icon_browse"
            app:srcCompat="@drawable/icon_browse" />

        <ImageButton
            android:id="@+id/Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:backgroundTint="@drawable/controller_selector_color"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:backgroundTint="@drawable/controller_selector_color"
            android:focusable="false"
            app:srcCompat="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <fragment
        android:id="@+id/ShopFragmentView"
        android:name="com.example.philipp.tetheract.fragments.BlankFragment"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.5" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_weight="0.2" />

</LinearLayout>